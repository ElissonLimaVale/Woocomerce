@model List<WooComerce.Models.ProdutoViewModel>
@{
    ViewData["Title"] = "Pesquisa";
}
<link href="~/css/search.css" rel="stylesheet" />
<div class="divisor"></div>
<div class="divisor"></div>


<div class="container-body">
    <h1 class="super-title">@ViewData["Title"]</h1>
    <!-- Wrapper for slides -->
    <div class="col-lg-12">
        <div class="row">
            @{
                if (Model == null)
                {
                    <div class="col-lg-12 content-search">
                        <div class="message">
                            <svg xmlns="http://www.w3.org/2000/svg" width="45" height="45" fill="currentColor" class="bi bi-emoji-neutral-fill emoji" viewBox="0 0 16 16">
                                <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zM7 6.5C7 7.328 6.552 8 6 8s-1-.672-1-1.5S5.448 5 6 5s1 .672 1 1.5zm-3 4a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zM10 8c-.552 0-1-.672-1-1.5S9.448 5 10 5s1 .672 1 1.5S10.552 8 10 8z"/>
                            </svg>
                            <h3 class="message-title">Nada encontrado!</h3>
                            <h4 class="message-text">Tente digitar os termos de forma diferente.</h4>
                        </div>
                    </div>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <div class="item-produto">
                            <div class="painel-sobre">
                                <div class="produto-footer">
                                    <div class="produto-nome">@item.Nome</div>
                                    <div><h4><strong>@item.Preco.ToString("C")</strong></h4></div>
                                    <div class="right">
                                        <a asp-route-codigo="@item.Codigo" asp-controller="Pedidos" asp-action="Carrinho" class="btn btn-success">Adicionar</a>
                                    </div>
                                </div>
                            </div>
                            <div class="painel-body">
                                <img class="img-produto-carrossel" src="/images/produtos/large_@(item.Codigo).jpg" />
                            </div>
                        </div>

                        // Controles do slide de produtos
                    }
                }
            }
        </div>
    </div>
    <!-- Controls -->
    <a class="left carousel-control" href="#my-carousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#my-carousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="divisor"></div>